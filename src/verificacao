 def avaliar_clientes_csv(caminho_arquivo, pontuacao_minima, receita_minima):
   
    with open(caminho_arquivo, 'r') as arquivo:
        linhas = arquivo.readlines()

   
    cabecalho = linhas[0].strip().split(',')
    
   
    if not all(col in cabecalho for col in ['nome', 'pontuacao_engajamento', 'receita_anual']):
        raise ValueError("O arquivo CSV deve conter as colunas 'nome', 'pontuacao_engajamento', e 'receita_anual'")

   
    indice_nome = cabecalho.index('nome')
    indice_pontuacao = cabecalho.index('pontuacao_engajamento')
    indice_receita = cabecalho.index('receita_anual')

   
    for linha in linhas[1:]:
        dados = linha.strip().split(',')
        nome = dados[indice_nome]
        pontuacao = int(dados[indice_pontuacao])
        receita = float(dados[indice_receita])

        
        adequado = pontuacao >= pontuacao_minima and receita >= receita_minima
        status = "Adequado" if adequado else "Não Adequado"
        print(f"Cliente: {nome} - Status: {status}")

    print("Esses são os clientes que estão aprovados na verificação.")


avaliar_clientes_csv('clientes.csv', pontuacao_minima=70, receita_minima=50000)
